{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/blues/json-schema-internal/master/card.usage.rsp.notecard.api.json",
    "title": "Notecard Application Programming Interface (API) Schema",
    "description": "JSON description of the card.usage API",
    "type": "object",
    "properties": {
        "manifestVersion": {
            "description": "Semantic version of the schema",
            "type": "string",
            "const": "0.1.1"
        },
        "apiVersion": {
            "description": "Semantic version of the Notecard API",
            "type": "string",
            "const": "9.1.1"
        },
        "ram": {
            "description": "RAM usage information",
            "type": "object",
            "properties": {
                "used": {
                    "description": "Used RAM in bytes",
                    "type": "integer",
                    "minimum": 0
                },
                "total": {
                    "description": "Total RAM in bytes",
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "flash": {
            "description": "Flash memory usage information",
            "type": "object",
            "properties": {
                "used": {
                    "description": "Used flash memory in bytes",
                    "type": "integer",
                    "minimum": 0
                },
                "total": {
                    "description": "Total flash memory in bytes",
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "data": {
            "description": "Data usage information",
            "type": "object",
            "properties": {
                "used": {
                    "description": "Used data in bytes",
                    "type": "integer",
                    "minimum": 0
                },
                "total": {
                    "description": "Total data in bytes",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    }
}
