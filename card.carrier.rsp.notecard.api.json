{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/blues/notecard-schema/master/card.carrier.rsp.notecard.api.json",
    "title": "card.carrier Response Application Programming Interface (API) Schema",
    "type": "object",
        "version": "0.2.1",
    "apiVersion": "9.1.1",
    "properties": {
        "mode": {
            "description": "The current AUX_CHARGING mode, or `off` if not set",
            "type": "string"
        },
        "charging": {
            "description": "Will display `true` when in AUX_CHARGING `charging` mode",
            "type": "boolean"
        }
    },
    "samples": [
        {
            "description": "Get the AUX_CHARGING mode",
            "json": "{\"mode\": \"charging\",\"charging\": true}"
        }
    ]
}
