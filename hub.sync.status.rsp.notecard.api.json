{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/blues/json-schema-internal/master/hub.sync.status.rsp.notecard.api.json",
    "title": "Notecard Application Programming Interface (API) Schema",
    "description": "JSON description of the hub.sync.status API",
    "type": "object",
    "properties": {
        "manifestVersion": {
            "description": "Semantic version of the schema",
            "type": "string",
            "const": "0.1.1"
        },
        "apiVersion": {
            "description": "Semantic version of the Notecard API",
            "type": "string",
            "const": "9.1.1"
        },
        "status": {
            "description": "Status of the sync operation",
            "type": "string"
        },
        "mode": {
            "description": "Current sync mode",
            "type": "string"
        },
        "time": {
            "description": "Time of the last sync",
            "type": "integer"
        },
        "alert": {
            "description": "Alert message",
            "type": "string"
        },
        "sync": {
            "description": "Whether a sync is in progress",
            "type": "boolean"
        },
        "completed": {
            "description": "Whether the sync has completed",
            "type": "boolean"
        },
        "requested": {
            "description": "Whether a sync has been requested",
            "type": "boolean"
        },
        "seconds": {
            "description": "Number of seconds since the last sync",
            "type": "integer"
        },
        "scan": {
            "description": "Whether a scan is in progress",
            "type": "boolean"
        }
    }
}
