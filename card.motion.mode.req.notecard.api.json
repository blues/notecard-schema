{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/blues/json-schema-internal/master/card.motion.mode.req.notecard.api.json",
    "title": "Notecard Application Programming Interface (API) Schema",
    "description": "JSON description of the card.motion.mode API",
    "type": "object",
    "properties": {
        "manifestVersion": {
            "description": "Semantic version of the schema",
            "type": "string",
            "const": "0.1.1"
        },
        "apiVersion": {
            "description": "Semantic version of the Notecard API",
            "type": "string",
            "const": "9.1.1"
        },
        "oneOf": {
            "cmd": {
                "description": "Command for the Notecard (no response)",
                "const": "card.motion.mode"
            },
            "req": {
                "description": "Request for the Notecard (expects response)",
                "const": "card.motion.mode"
            }
        },
        "mode": {
            "description": "Motion detection mode to set",
            "type": "string",
            "enum": ["continuous", "periodic", "off"]
        },
        "seconds": {
            "description": "Interval in seconds for periodic motion detection",
            "type": "integer",
            "minimum": 0
        },
        "sensitivity": {
            "description": "Motion detection sensitivity (1-5)",
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        }
    }
}
